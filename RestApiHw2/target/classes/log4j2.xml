<?xml version="1.0" encoding="UTF-8" ?>
<Configuration>
    <Appenders>
        <Console name = "Console" target = "SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MMM-dd HH:mm:ss} [%t] %-5level %c{1.} - %msg %n"></PatternLayout>
        </Console>

        <File name = "File" target = "RDhw2.log">
            <PatternLayout pattern="%d [%t] %-5level %c{1.} - %msg %n"></PatternLayout>
        </File>
    </Appenders>
    <Loggers>
        <Root level = "info">
            <AppenderRef ref = "Console"/>
            <AppenderRef ref = "File"/>
        </Root>
    </Loggers>
</Configuration>